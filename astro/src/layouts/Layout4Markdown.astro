---
const { frontmatter } = Astro.props;
const titleColor = '#20184e';
---

<html>
  <head>
    <title>{frontmatter.title}</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css" integrity="sha384-Xi8rHCmBmhbuyyhbI88391ZKP2dmfnOl4rT9ZfRI7mLTdk1wblIUnrIq35nqwEvC" crossorigin="anonymous">
  </head>
  
  <body>
    <!-- <p>タイトル: {frontmatter.title}  <br />執筆者: {frontmatter.author}</p> -->
 
    <slot />
 
    <!-- <p>投稿日: {frontmatter.date}</p> -->
  </body>
</html>

<style is:global define:vars={{ titleColor }}>
    body{
        color: #181818;
        margin: 0 1.5rem;
    }
    h1{
        color: var(--titleColor);
        font-size: 2.0rem;
        font-weight: 600;
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
        border-bottom: 2px solid #aaa;
        line-height: 1.25;
    }
    h2{
        color: var(--titleColor);
        font-size: 1.5rem;
        font-weight: 600;
        padding-top: 0.3rem;
        padding-bottom: 0.3rem;
        border-bottom: 1px solid #aaa;
        line-height: 1.25;
    }
    h3{
        color: var(--titleColor);
        font-size: 1.2rem;
        font-weight: 600;
        padding-top: 0.2rem;
        padding-bottom: 0.1rem;
    }
    h4{
        color: var(--titleColor);
        font-size: 1rem;
        font-weight: 600;
        padding-top: 0.1rem;
        padding-bottom: 0.1rem;
    }

    hr{
        border: 3px solid #ccc;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    table{
        margin: 0 0.5rem 0rem;
        border: solid 2px #ccc;
        border-collapse: collapse;
        th {
            border: solid 1px #aaa;
            background-color: #ddd;}
        td{
            border: solid 1px #aaa;
            background-color: #fdfdfd;}
    }

    p{
        margin: 1rem;
    }

    blockquote{
        border: solid 1px #cceeff;
        margin: 0.5rem 1rem !important;
        padding: 0.5rem 0.5rem !important;
        border-left: .75rem solid #cceeff;
        p{
            margin:0 !important;
        }
        cite{
            display: block;
            color: #110088;
            text-align: left;
            padding-left: 0.5rem;
        }
    }

    .expressive-code {margin: 1rem 0.5rem;}
    
</style>